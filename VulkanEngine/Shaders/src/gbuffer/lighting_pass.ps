[[vk::input_attachment_index(0)]] SubpassInput<float4> gPos;
[[vk::input_attachment_index(1)]] SubpassInput<float4> gCol;
[[vk::input_attachment_index(2)]] SubpassInput<float4> gNorm;

float4 main(float4 screenPos : SV_Position) : SV_Target
{
    float4 pos = gPos.SubpassLoad();
    float4 col = gCol.SubpassLoad();
    float4 normal = gNorm.SubpassLoad();
    
    return float4(col.rgb, pos.a * normal.a);
}